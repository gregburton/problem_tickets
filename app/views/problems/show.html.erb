<div class="content">
  <p><h2><%= @problem.description %></h2></p>
  <p><%= @problem.attempt %></p>
  <% if current_user == @problem.user %>
    <p>
      <h5 class="dark">
        <%= link_to  solved_problem_path(@problem),  method: :put, data: { confirm: "Are you sure this is solved?"} do%>
          <i class="fa fa-thumbs-up fa-2x"></i>
         <% end %>
         My problem has been solved
      </h5>
    </p>
  <% end %>
  <br>
  <h3 class="dark"><%= pluralize(@problem.notes.count, "Note") %></h3>
  <div class="notes_wrapper" id="notes">
    <%= render @notes %>
  </div>
  <br>
  <div class="formwrap">
    <%= render "notes/note_form" %>
  </div>
</div>