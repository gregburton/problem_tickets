<div class="content">
  <h1>Mo' Problems</h1>
  <p>Where collaboration ends frustration!</p>
  <% if !logged_in? %>
    <%= render "layouts/getting_started" %>
  <% end %>
  <br>
  <h3>Seems Everybody's Got Problems These Days</h3>
  <% @problems.each do |problem| %>
  <div class="problem_list">
    <ul id="problemlist">

      <li><h4><b><%= problem.description %></b></h4></li>
      <li><%= truncate( problem.attempt, length: 75, separator: ' ')%></li>
      <li><span class="asked_by">Asked by <%= problem.user.name %> <%= problem.created_at.strftime("on %m/%d/%Y at %I:%M%p") %></span></li>
          <%= link_to 'Can you help?', problem_path(problem) %></li>
    </ul>
  </div>
  <% end %>
</div>


