<div class="content">
  <h1>Mo' Problems</h1>
  <p>Where collaboration ends frustration!</p>
  <!--intention is to set this up so the getting started partial only displays when user is logged out
  <# if logged_in? == nil %>-->
    <%= render "layouts/getting_started" %>
  <!--<# end %>-->

  <% @problems.each do |problem| %>
  <ul>
    <li><%= problem.created_at.strftime("On %m/%d/%Y at %I:%M%p") %></li>
    <li><%= problem.user.name %> had a problem...</li>
    <li><%= problem.description %></li>
    <li><%= truncate( problem.attempt, length: 50, separator: ' ')%>
        <%= link_to 'Can you help?', problem_path(problem) %></li>
  </ul>
  <% end %>
</div>


