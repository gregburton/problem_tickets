<div class="content">
  <h1>Mo' Problems</h1>
  <p>Where collaboration ends frustration!</p>
  <% if !logged_in? %>
    <%= render "layouts/getting_started" %>
  <% end %>
  <br>
  <h3 class="dark">Current Problems</h3>
  <% @problems.each do |problem| %>
  <div class="tan">
    <ul id="list">
      <li>
        <h4><b>
            <%= link_to problem.description, problem_path(problem) %>
        </b></h4>
      </li>
      <li><%= truncate( problem.attempt, length: 50, separator: ' ')%></li>
      <li>
        <span class="asked_by">Asked by <%= problem.user.name %> <%= problem.created_at.strftime("on %m/%d/%Y at %I:%M%p") %>
        </span>
      </li>
    </ul>
  </div>
  <% end %>
</div>


