<div class="topnav">
  <ul id="navlist">
    <li>
      <%= link_to 'All Problems', root_path %>
    </li>
    <li>
      <%= link_to 'New Problem', new_problem_path %>
    </li>
    <% if logged_in? %>
      <li>
        <span class="current_user">
          Logged in as
          <b><%= current_user.name %></b>
        </span>
      </li>
      <li>
        <%= link_to "Log out", logout_path, :method => :delete %>
      </li>
    <% else %>
      <li class="active">
        <%= link_to "Login", new_login_path %>
      </li>
    <% end %>
  </ul>
</div>